# Legal Council API Environment Configuration
# Copy this file to .env and fill in your values

# API Settings
API_TITLE="Legal Council API"
API_VERSION="1.0.0"
DEBUG=false

# CORS Settings (comma-separated origins)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Database Settings (Cloud SQL PostgreSQL with pgvector)
DATABASE_URL=postgresql://user:password@host:5432/legal_council
DATABASE_POOL_MIN_SIZE=1
DATABASE_POOL_MAX_SIZE=10
DATABASE_COMMAND_TIMEOUT=60

# GCP Settings
GCP_PROJECT=your-gcp-project
GCP_REGION=us-central1

# Vertex AI Settings
VERTEX_AI_MODEL=gemini-2.5-flash
# text-multilingual-embedding-002: 768 dims, excellent multilingual support
VERTEX_AI_EMBEDDING_MODEL=gemini-embedding-001
EMBEDDING_DIMENSION=768

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Session Settings
SESSION_MAX_MESSAGES=100
SESSION_TIMEOUT_HOURS=24

# Vector Search Settings
VECTOR_SEARCH_LIMIT=10
VECTOR_SEARCH_MIN_SIMILARITY=0.5
